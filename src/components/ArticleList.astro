---
import {HumanTime} from '../components/human-time';

const {posts} = Astro.props;
---

<section class="mb-32 space-y-8">
    {
        posts.map((post) => (
            <div class="block font-jetbrains-mono">
                <div class="text-2xl font-bold">
                    {post.data?.['on-page-title-prefix'] + ' ' ?? ''}
                </div>
                <a
                    href={`/blog/${post.slug}`}
                    class="text-2xl font-bold"
                    transition:name={`article-title_${post.id}`}>
                    {post.data.title}
                </a>
                <div class="">
                    <div class="space-x-4">
                        {post.data.tags.map((tag) => (
                            <a
                                href={`/tag/${tag}`}
                                class="text-sm text-gray-600">
                                #{tag}
                            </a>
                        ))}
                    </div>
                    <div
                        class="text-sm text-gray-500 uppercase mt-2"
                        transition:name={`article-time_${post.id}`}>
                        <HumanTime time={post.data.edited} client:idle />
                    </div>
                </div>
            </div>
        ))
    }
</section>
